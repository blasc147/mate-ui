{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"],
    "paths": {
      "@truenorth/mate-ui": ["libs/mate-ui/src/index.ts"],
      "@components": ["apps/mate-ui-docs/src/components/index.tsx"],
      "@icons": ["apps/mate-ui-docs/src/icons/index.ts"],
      "@/layouts/*": ["apps/mate-ui-docs/src/layouts/*"],
      "@/constants/*": ["apps/mate-ui-docs/src/constants/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
